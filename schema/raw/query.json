{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QueryMsg",
  "oneOf": [
    {
      "description": "Returns the current configuration of the btc-staking contract.",
      "type": "object",
      "required": [
        "config"
      ],
      "properties": {
        "config": {
          "type": "object",
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Returns the current admin of the contract.",
      "type": "object",
      "required": [
        "admin"
      ],
      "properties": {
        "admin": {
          "type": "object",
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Returns the finality provider by its BTC public key, in hex format",
      "type": "object",
      "required": [
        "finality_provider"
      ],
      "properties": {
        "finality_provider": {
          "type": "object",
          "required": [
            "btc_pk_hex"
          ],
          "properties": {
            "btc_pk_hex": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Returns the list of registered finality providers",
      "type": "object",
      "required": [
        "finality_providers"
      ],
      "properties": {
        "finality_providers": {
          "type": "object",
          "properties": {
            "limit": {
              "type": [
                "integer",
                "null"
              ],
              "format": "uint32",
              "minimum": 0.0
            },
            "start_after": {
              "description": "BTC public key of the FP to start after, or `None` to start from the beginning",
              "type": [
                "string",
                "null"
              ]
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Returns delegation information by its staking tx hash, in hex format.",
      "type": "object",
      "required": [
        "delegation"
      ],
      "properties": {
        "delegation": {
          "type": "object",
          "required": [
            "staking_tx_hash_hex"
          ],
          "properties": {
            "staking_tx_hash_hex": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Return the list of delegations",
      "type": "object",
      "required": [
        "delegations"
      ],
      "properties": {
        "delegations": {
          "type": "object",
          "properties": {
            "active": {
              "description": "An optional filter to return only active delegations",
              "type": [
                "boolean",
                "null"
              ]
            },
            "limit": {
              "description": "Maximum number of delegations to return.",
              "type": [
                "integer",
                "null"
              ],
              "format": "uint32",
              "minimum": 0.0
            },
            "start_after": {
              "description": "Staking tx hash (in hex format) of the delegation to start after, or `None` to start from the beginning.",
              "type": [
                "string",
                "null"
              ]
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Returns the list of staking tx hashes (in hex format) corresponding to delegations, for a given finality provider.\n\nThe hashes are returned in hex format",
      "type": "object",
      "required": [
        "delegations_by_f_p"
      ],
      "properties": {
        "delegations_by_f_p": {
          "type": "object",
          "required": [
            "btc_pk_hex"
          ],
          "properties": {
            "btc_pk_hex": {
              "description": "BTC public key of the finality provider, in hex format.",
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Returns the finality provider information by its BTC public key, in hex format. The information includes the aggregated power of the finality provider.",
      "type": "object",
      "required": [
        "finality_provider_info"
      ],
      "properties": {
        "finality_provider_info": {
          "type": "object",
          "required": [
            "btc_pk_hex"
          ],
          "properties": {
            "btc_pk_hex": {
              "type": "string"
            },
            "height": {
              "description": "Optional block height at which the power is being aggregated. If `height` is not provided, the latest aggregated power is returned",
              "type": [
                "integer",
                "null"
              ],
              "format": "uint64",
              "minimum": 0.0
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Returns the list of finality provider infos sorted by their total active sats, in descending order.",
      "type": "object",
      "required": [
        "finality_providers_by_total_active_sats"
      ],
      "properties": {
        "finality_providers_by_total_active_sats": {
          "type": "object",
          "properties": {
            "limit": {
              "type": [
                "integer",
                "null"
              ],
              "format": "uint32",
              "minimum": 0.0
            },
            "start_after": {
              "description": "BTC public key of the FP to start after, or `None` to start from the top",
              "anyOf": [
                {
                  "$ref": "#/definitions/FinalityProviderInfo"
                },
                {
                  "type": "null"
                }
              ]
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Returns the height at which the contract gets its first delegation, if any.",
      "type": "object",
      "required": [
        "activated_height"
      ],
      "properties": {
        "activated_height": {
          "type": "object",
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  ],
  "definitions": {
    "FinalityProviderInfo": {
      "type": "object",
      "required": [
        "btc_pk_hex",
        "height",
        "slashed",
        "total_active_sats"
      ],
      "properties": {
        "btc_pk_hex": {
          "description": "Bitcoin secp256k1 PK of this finality provider. The PK follows encoding in BIP-340 spec in hex format",
          "type": "string"
        },
        "height": {
          "description": "Height that other info is indexed by",
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "slashed": {
          "description": "Whether this finality provider is slashed",
          "type": "boolean"
        },
        "total_active_sats": {
          "description": "Total active sats delegated to this finality provider",
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        }
      },
      "additionalProperties": false
    }
  }
}
